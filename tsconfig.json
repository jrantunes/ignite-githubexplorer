{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],                                
    "allowJs": true,                          
    "jsx": "react-jsx",                        
    "noEmit": true,                           
    "isolatedModules": true,                  
    "strict": true,                              
    "moduleResolution": "node",               
    "allowSyntheticDefaultImports": true,  
    "resolveJsonModule": true,   
    "esModuleInterop": true,   
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true     
  },
  "include": ["src"]
}
